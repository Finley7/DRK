        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <legend>{{ 'Manage user'|trans }}</legend>

                    <a href="{{ path('admin_user_index') }}"><i class="fa fa-long-arrow-left"></i> {{ 'Back to summary'|trans }}</a>
                    {{ form_start(form) }}
                    {{ form_widget(form) }}
                    <button class="btn btn-success">{{ button_label|default('Save user') }}</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
