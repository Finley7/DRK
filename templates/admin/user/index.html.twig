{% extends 'admin/base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <legend>{{ 'User management'|trans }} <a class="btn btn-success pull-right"
                                           href="{{ path('admin_user_create') }}"><i
                            class="fa fa-user-plus"></i> {{ 'Add user'|trans }}</a></legend>
            {#            <small class="help-text">{{ 'Here you can manage your categories or sections that forums will be added to'|trans }}</small>#}
            <hr>
            <div class="card">
            <table class="table data-table table-hover table-outline table-vcenter text-nowrap card-table">
                <thead>
                <tr>
                    <th>#</th>
                    <th>{{ 'Name'|trans }}</th>
                    <th>{{ 'Primary role'|trans }}</th>
                    <th>{{ 'Actions'|trans }}</th>
                </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ loop.index }}</td>
                        <td>{{ user.name }}</td>
                        <td>{{ user.primaryRole.name }}</td>
                        <td><a class="btn btn-warning btn-sm" href="{{ path('admin_user_edit', {user: user.id}) }}"><i class="fa fa-edit"></i></a></td>

                    </tr>
                {% endfor %}
                </tbody>
            </table>
            </div>
        </div>
    </div>
{% endblock %}
